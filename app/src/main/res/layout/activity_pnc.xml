<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:background="#009700">


    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo"/>
    <TextView
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:text="   A one on one consultation with Nadia where she will provide her clients with advice on meal content, food selection, portion control and weight management. Clients can also be educated on celiac disease, childhood obesity, eating disorders, fibromyalgia and sports nutrition. PNC can be done in person, over the phone or consultations can happen via email, FaceTime and Skype. "
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="27dp"
        android:layout_y="136dp"
        android:autoText="true"

        android:textColor="#ff000401"
        android:layout_gravity="center_vertical|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Nutrition Coaching (PNC)"
            android:id="@+id/textView3"
            android:layout_x="27dp"
            android:layout_y="88dp"
            android:textColor="#ffff0e07" />

    </AbsoluteLayout>
</ScrollView>
