<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:background="#009700">


    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:text="Gain a better understanding of how a grocery store is set up. Find out where the healthier choices of food are located, how to read and understand the food label more efficiently and make healthier snack and meal choices. Nadia will also explain how to modify favorite recipes by substituting one or more healthier food items."
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="27dp"
            android:layout_y="136dp"
            android:autoText="true"

            android:textColor="#ff000401"
            android:layout_gravity="center_vertical|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery Store Tours"
            android:id="@+id/textView3"
            android:layout_x="27dp"
            android:layout_y="88dp"
            android:textColor="#ffff0e07" />

    </AbsoluteLayout>
</ScrollView>
