<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:background="#009700">


    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffffff"

        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:text="Learn the healthiest ways to prepare meals at home after a cooking demonstration with Nadia. Become more confident in the kitchen while using whole foods. Helen will show you how to modify family recipes in order to make them heart healthy, low in sodium, fat, and cholesterol without taking the delicious taste away."
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_x="22dp"
            android:layout_y="137dp"
            android:autoText="true"

            android:textColor="#ff000401"
            android:layout_gravity="center_vertical|right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooking Demos"
            android:id="@+id/textView3"
            android:layout_x="27dp"
            android:layout_y="88dp"
            android:textColor="#009700" />

    </AbsoluteLayout>
</ScrollView>